@model Tuohy.Epi.ContentTypesInUse.Models.ContentTypeGroups
@{
    Layout = "";
}
<div class="in-use">
    <div>
        <h2>Pages</h2>
        <ul>
            @foreach (var p in Model.Pages)
            {
                <li>
                    <div class="content-type">
                        <a href="#" data-id="@p.ContentTypeId">@p.ContentTypeName</a><span>@p.Count</span>
                        <div class="container"></div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div>
        <h2>Blocks</h2>
        <ul>
            @foreach (var p in Model.Blocks)
            {
                <li>
                    <div class="content-type">
                        <a href="#" data-id="@p.ContentTypeId">@p.ContentTypeName</a><span>@p.Count</span>
                        <div class="container"></div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
<script>
    inUse.init();
</script>